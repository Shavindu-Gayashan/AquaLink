<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_transparatent"
    tools:context=".DashboardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header using GridLayout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alignmentMode="alignBounds"
            android:background="@color/white"
            android:columnCount="3"
            android:padding="16dp"
            android:useDefaultMargins="false">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_background"
                android:padding="8dp"
                android:src="@drawable/icon_profile" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical|fill_horizontal"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/blue_primary"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_menue" />


        </GridLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Main Content Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <!-- Tank Title -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:text="@string/lbl_tank_name"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- Connection Status using GridLayout -->
                        <GridLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginBottom="20dp"
                            android:columnCount="2">

                            <View
                                android:id="@+id/icon_connection_state"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="6dp"
                                android:background="@drawable/circle_red" />

                            <TextView
                                android:id="@+id/txt_connection_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_gravity="center_vertical"
                                android:text="@string/lbl_connection_state_disconnected"
                                android:textColor="@color/red"
                                android:textSize="14sp" />

                        </GridLayout>

                        <!-- Water Level Display using GridLayout -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="30dp"
                            android:background="@drawable/rounded_background_gray"
                            android:columnCount="2"
                            android:padding="16dp">

                            <!-- Water Tank Visual -->
                            <FrameLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp">

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tank_container" />


                            </FrameLayout>

                            <!-- Percentage Display -->
                            <TextView
                                android:id="@+id/txt_water_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_gravity="center"
                                android:text="@string/lbl_water_level"
                                android:textColor="@color/black"
                                android:textSize="48sp"
                                android:textStyle="bold" />

                        </GridLayout>

                        <!-- Status Information using GridLayout -->
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_background_gray"
                            android:columnCount="2"
                            android:padding="16dp"
                            android:rowCount="4">

                            <!-- Motor Status Row -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_marginBottom="8dp"
                                android:text="@string/lbl_motor_state"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_motor_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_gravity="end"
                                android:layout_marginBottom="8dp"
                                android:text="@string/value_motor_state"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!-- Selected Mode Row -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_marginBottom="8dp"
                                android:text="@string/lbl_selected_mode"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/txt_selected_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="1"
                                android:layout_column="1"
                                android:layout_gravity="end"
                                android:layout_marginBottom="8dp"
                                android:text="@string/value_selected_mode"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!-- Estimate Time Row -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_marginBottom="8dp"
                                android:text="@string/lbl_estimate_time"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="2"
                                android:layout_column="1"
                                android:layout_gravity="end"
                                android:layout_marginBottom="8dp"
                                android:text="@string/value_estimate_time"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!-- Running Time Row -->
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="3"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:text="@string/lbl_running_time"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_row="3"
                                android:layout_column="1"
                                android:layout_gravity="end"
                                android:text="@string/value_running_time"
                                android:textColor="@color/gray_dark"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </GridLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_background_gray"
                            android:columnCount="3"
                            android:padding="10dp"
                            android:rowCount="3">

                            <TextView
                                android:id="@+id/btn_mode_auto"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="0"
                                android:layout_columnWeight="1"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/rounded_background_selected"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/lbl_mode_auto"
                                android:textColor="@color/gray_dark"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/btn_mode_manual"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="1"
                                android:layout_columnWeight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/rounded_background_white"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/lbl_mode_manual"
                                android:textColor="@color/gray_dark"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/btn_mode_custom"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_row="0"
                                android:layout_column="2"
                                android:layout_columnWeight="1"
                                android:layout_marginStart="5dp"
                                android:layout_marginBottom="8dp"
                                android:background="@drawable/rounded_background_white"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/lbl_mode_custom"
                                android:textColor="@color/gray_dark"
                                android:textSize="16sp" />
                        </GridLayout>

                        <include layout="@layout/auto_mode_settings" />

                        <include layout="@layout/manual_mode_settings" />

                        <include layout="@layout/custom_mode_settings" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>