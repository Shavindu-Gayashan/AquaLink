{
  "rules": {
    "water_tank": {
      ".read": "true",
      ".write": "true"
    },
    "isRequestToTurnOn": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "isRequestToTurnOff": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "Users": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    }
  }
}

